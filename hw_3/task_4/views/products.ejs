<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <div class="wrapper">
      <h1><%= title %></h1>
      <main class="page">
        <div class="page__container">
          <div class="page__cards card">
            <div class="card__product">
              <table>
                <thead>
                  <tr>
                    <th>Product Name</th>
                    <th>Description</th>
                    <th>Price</th>
                  </tr>
                </thead>
                <% products.forEach(product => { %>
                <tbody>
                  <tr>
                    <td><%= product.name %></td>
                    <td><%= product.description %></td>
                    <td>$<%= product.price %></td>
                  </tr>
                </tbody>
                <% }); %>
              </table>
            </div>
          </div>
        </div>
      </main>
    </div>
  </body>
</html>
